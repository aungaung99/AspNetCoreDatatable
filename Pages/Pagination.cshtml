@page
@model AspNetCoreDatatable.Pages.PaginationModel
@{
    ViewData["Title"] = "Pagination API";
}

<link href="~/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div class="card">

    <div class="card-header bg-white">
        <div class="card-title mb-0">
            <h5 class="mb-0">
                JQuery Datatable pagination
            </h5>
        </div>
    </div>
    <div class="progress rounded-0" style="height:3px">
        <div class="progress-bar" role="progressbar" style="width: 0%;height:3px" aria-
             valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="card-body">
        <table id="example" class="table table-striped table-bordered rounded" style="width:100%;border-radius:10px">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name (EN)</th>
                    <th>Name (MM)</th>
                    <th>Lat</th>
                    <th>Long</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name (EN)</th>
                    <th>Name (MM)</th>
                    <th>Lat</th>
                    <th>Long</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/datatables/js/dataTables.bootstrap4.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    $(document).ready(function () {
        var table = $('#example').DataTable({
            ajax: {
                url: '/api/datatables/pagination',
                type: 'POST',
                dataType: 'JSON',
                beforeSend: () => {
                    $('.progress').show();
                    $('.progress-bar').attr('style', 'width: 50%;');
                },
                complete: (res) => {
                    $('.progress-bar').attr('style', 'width: 100%;');
                    setTimeout(() => { $('.progress-bar').attr('style', 'width: 0%;'); $('.progress').hide(); }, 500);
                    console.log(res.responseJSON);
                },
            },
            processing: true,
            serverSide: true,
            filter: true,
            ordering: false,
            columns: [
                { data: 'streetId' },
                { data: 'streetName' },
                { data: 'streetNameMm' },
                { data: 'lat' },
                { data: 'long' },
            ],
        });

        table.on('xhr.dt', (e, settings, json, xhr) => {

        });

        table.on('length.dt', (e, settings, len) => {
            console.log(len);
        });
    });
</script>