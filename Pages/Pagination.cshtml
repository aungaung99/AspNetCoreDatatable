@page
@model AspNetCoreDatatablePagination.Pages.PaginationModel
@{
}

<link href="~/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div class="card">

    <div class="card-header bg-white">
        <div class="card-title mb-0">
            <h5 class="mb-0">
                JQuery Datatable pagination
            </h5>
        </div>
    </div>
    <div class="progress rounded-0" style="height:3px">
        <div class="progress-bar" role="progressbar" style="width: 0%;height:3px" aria-
             valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="card-body">
        <table id="example" class="table table-striped table-bordered rounded" style="width:100%;border-radius:10px">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name (EN)</th>
                    <th>Name (MM)</th>
                    <th>Lat</th>
                    <th>Long</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name (EN)</th>
                    <th>Name (MM)</th>
                    <th>Lat</th>
                    <th>Long</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/datatables/js/dataTables.bootstrap4.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    $(document).ready(function () {
        $('.progress-bar').attr('style', 'width: 0%;');

        setTimeout(() => {
            $('#example').DataTable({
                ajax: {
                    url: '/api/datatables',
                    type: 'POST',
                    dataType: 'JSON',
                    beforeSend: () => { $('.progress-bar').attr('style', 'width: 50%;'); },
                    complete: (res) => {
                        $('.progress-bar').attr('style', 'width: 100%;');
                        setTimeout(() => { $('.progress').remove(); }, 500);
                    },
                },
                serverSide: true,
                filter: true,
                columns: [
                    { data: 'streetId' },
                    { data: 'streetName' },
                    { data: 'streetNameMm' },
                    { data: 'lat' },
                    { data: 'long' },
                ],
            });
        }, 500);
    });
</script>